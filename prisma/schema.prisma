datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  emails    Email[]
}

model Email {
  id        Int      @id @default(autoincrement())
  senderId  Int
  recipient String
  subject   String
  content   String
  sentAt    DateTime @default(now())
  receivedAt DateTime?
  user      User     @relation(fields: [senderId], references: [id])
}

model Inbox {
  id        Int      @id @default(autoincrement())
  sender    String
  subject   String
  content   String
  receivedAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Sent {
  id        Int      @id @default(autoincrement())
  recipient String
  subject   String
  content   String
  sentAt    DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
